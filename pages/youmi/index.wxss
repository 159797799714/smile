/* diy组件 */
@import "../../components/diy/index.wxss";

page {
  background: #131313 !important;
  padding-top: 50px;
  box-sizing: border-box;
}

.header-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 64px;
  padding-top: 24px;
  box-sizing: border-box;
  background-color: #131313;
  z-index: 9;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索框 */
.index-search-box-bg {
  background-color: #131313;
  margin-bottom: 36rpx;
  padding: 46rpx 30rpx 0rpx;
}

.index-search-box {
  margin-right: 20rpx;
  height: 66rpx;
  flex: 1;
}

.index-cont-search {
  height: 66rpx;
  background-color: rgba(248, 248, 248, .1);
  border-radius: 4rpx;
}

.index-cont-search>image {
  width: 28rpx;
}

.index-cont-search text {
  margin-left: 60rpx;
}

.camera-logo {
  height: 60rpx;
  width: 64rpx;
  background: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
}

/* 选项卡 */
.swiper-tab {
  padding: 25rpx 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.swiper-tab-fixed {
  position: fixed;
  top: 64px;
  left: 0;
  z-index: 11111;
  height: 90rpx;
}

.checked {
  position: relative;
  font-size: 40rpx;
  color: #fff;
}

.checked:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 6rpx;
  width: 100%;
  background: #ff00ff;
}
.swiper-tab-item{
  margin: 0 35rpx;
}
.swiper-tab-item.on>image {
  opacity: 1;
}

.swiper-tab-item>text {
  position: relative;
  z-index: 2;
  line-height: 1rem;
}

.swiper-tab-item>image {
  position: absolute;
  width: 78rpx;
  left: -3rpx;
  top: 50%;
  z-index: 1;
  height: 6rpx;
  opacity: 0;
}

/* 种草 */
.culture{
  padding-left: 30rpx;
  overflow: hidden;
}

.item{
  float: left;
  height: 524rpx;
  width: 326rpx;
  margin: 0 30rpx 20rpx 0;
  border: 1px solid #666;
}
.item .img{
  height: 330rpx;
  width: 100%;
  margin-bottom: 18rpx;
}
.item .img>image{
  height: 100%;
  width: 100%;
}
.item .title{
  height: 67rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}
.info{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  width: 100%;
  padding: 0 20rpx;
  line-height: 50rpx;
}
.info .zan{
  display: flex;
  color: #ADADAD;
  font-size: 24rpx;
}
.info .zan image {
  width: 29rpx;
  margin-right: 8rpx;
  margin-top: 10rpx;
}
.info .user{
  display: flex;
}
.info .user .userName{
  font-size: 24rpx;
  width: 150rpx;
}
.info .user .userImg{ 
  height: 40rpx;
  width: 40rpx;
  margin: 5rpx 10rpx 0 0;
  border-radius: 100%;
  overflow: hidden;
}
.info .user .userImg>image{
  height: 100%;
  width: 100%;
  background: #ccc;
}


/* 活动 */
.activity-item{
  width: 690rpx;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
  border: 1px solid #666;
}
.p-30{
  padding: 0 30rpx;
}
.activity-item .info{
  padding: 0 30rpx;
}
.activity-btn{
  line-height: 50rpx;
  padding: 0 22rpx;
  border-radius: 25rpx;
  background: #9900ff;
}
