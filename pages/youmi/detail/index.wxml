              <text class="f-24 col-6 m-top4">{{ li.reply_input_date }}</text>
            </view>
            <view class="like-number reply-like-num" bindtap="like" data-type="all" data-state="commentreplylike" data-index="{{ index }}" data-num="{{ num }}">
              <image mode="widthFix" src="{{item.isreplylike == 'yes' ? '../../../images/love-active.png' : '../../../images/love.png'}}" />
              <view class="col-9 f-24 t-c">{{ li.replylikenum }}</view>
            </view>
          </view> -->
          
        </view>
        
        <view class="like-number">
          <image bindtap="like" data-index="{{ index }}" data-state="commentlike" data-type="all" mode="widthFix" src="{{item.islike ==='yes' ? '../../../images/love-active.png' : '../../../images/love.png'}}" />
          <view class="col-9 f-24 t-c">{{ item.likenum }}</view>
        </view>
      </view>
      
    </view>
  </scroll-view>

  <!-- 发布评论 -->
  <view wx:if="{{isSendComment}}" class="post-comment b-t flex-y-center">
    <textarea value="{{ commentValue }}" adjust-position="false" bindfocus="textareaFocus" bindinput="textareaInput"
      bindblur="textareaBlur" focus="{{isTextareaFocus}}" fixed cursor-spacing="10" class="col-9 f-28" auto-height
      placeholder="添加你的评论..." placeholder-style="color: #ccc" />
    <view bindtap="sendComment" class="f-30 col-f3c f-w">发布</view>
    </view>

    <!-- 遮罩层
    <view class="{{isTextareaFocus ? 'mask' : ''}}"></view>

  <!-- 快捷导航 -->
  <shortcut></shortcut>
</view>
