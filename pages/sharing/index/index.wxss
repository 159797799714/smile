.cont {
  margin: 0;
  padding: 0;
  line-height: 1;
  background-color: #fff;
  margin-top: 98rpx;

}

.main {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.main_goods {
  margin: 30rpx auto;
  /* padding: 20rpx; */
  display: flex;
  height: 220rpx;
  width: 690rpx;
  box-sizing: border-box;
}

.main_goods_left {
  display: flex;
  width: 220rpx;
  height: 100%;
  margin-right: 30rpx;
  align-items: center;
  position: relative;
}

.main_goods_left> image {
  display: block;
  width: 220rpx;
  height: 220rpx;
}
.main_goods_left .main_goods_left-people {
  position: absolute;
  top: 8rpx;
  left: -12rpx;
  height: 40rpx;
}
.main_goods_left .main_goods_left-people text {
  position: absolute;
  line-height: 40rpx;
  white-space: nowrap;
  padding: 0 20rpx 0 10rpx;
  border-radius: 0 20rpx 20rpx 0;
  background: rgb(244, 160, 61);
}

.main_goods_right {
  position: relative;
  width: 470rpx;
  height: 100%;
}

.main_goods_title {
  display: block;
  margin-top: 20rpx;
  width: 100%;
  font-size: 30rpx;
  line-height: 1.3;
  color: #131313;
}

.main_goods_desc {
  position: absolute;
  left: 0rpx;
  top: 90rpx;
}
.main_goods_desc image {
  width: 40rpx;
  height: 40rpx;
}
.pintuan-more-icon {
  margin-right: 20rpx;
  margin-top:12rpx;
}

.main_goods_desc text {
  display: inline-block;
}

.desc_introduction {
  margin-top: 10rpx;
  line-height: 1.4;
  font-size: 24rpx;
  color: #ff495e;
  width: 400rpx;
}

.desc_situation {
  font-size: 24rpx;
  line-height: 1.3;
  color: rgb(240, 60, 60);
  margin-top: 10rpx;
}

.people {
  margin: 0 13rpx;
}

.cl-9 {
  color: #999;
}

.desc_footer {
  margin-top: 15rpx;
  font-size: 26rpx;
}

.desc_footer .price_x {
  margin-right: 25rpx;
  color: #131313;
  font-size: 32rpx;
  font-weight: 600;
}

.desc_footer .price_y {
  text-decoration: line-through;
}

.settlement {
  position: absolute;
  right: 0rpx;
  bottom: 28rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  padding: 0 25rpx;
  border-radius: 25rpx;
  color: #fff;
  background: #F4433D;
  border: none;
}

.header {
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  height: 128rpx;
  color: #ADADAD;
  font-size: 32rpx;
  background: #131313;
  border-bottom: 1rpx solid #e4e4e4;
  z-index: 100;
  overflow: hidden;
  white-space: nowrap;
}

.header scroll-view {
  height: 100%;
}

.cs-box {
    padding: 0 232rpx;
}

.cs-bg {
  background-color: #fff;
  height: 30rpx;
  width: 100%;
  border-radius:30rpx 30rpx 0px 0px;
  position: fixed;
  z-index: 101;
  top: 100rpx;
}

.cs {
  display: inline-block;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  box-sizing: border-box;
}

.cs text {
  display: block;
  height: 100%;
}

.active text {
  color: #fff;
  font-weight: 700;
  position: relative;
}
.active text::after {
  content: " ";
  width:34rpx;
  height:4rpx;
  position: absolute;
  background:rgba(244,67,61,1);
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
