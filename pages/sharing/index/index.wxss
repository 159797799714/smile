page{
  background: #131313;
}
.cont {
  margin: 0;
  padding: 0;
  line-height: 1;
}

.main {
  box-sizing: border-box;
  padding: 0 20rpx;
}
.banner{
  margin-bottom: 79rpx;
}

.main_goods {
  margin: 0 auto 60rpx;
  /* padding: 20rpx; */
  display: flex;
  height: 220rpx;
  width: 690rpx;
  box-sizing: border-box;
}

.main_goods_left {
  display: flex;
  width: 220rpx;
  height: 100%;
  margin-right: 30rpx;
  align-items: center;
  position: relative;
}

.main_goods_left> image {
  display: block;
  width: 220rpx;
  height: 220rpx;
}
.main_goods_left .main_goods_left-people {
  position: absolute;
  top: 8rpx;
  left: -12rpx;
  height: 40rpx;
}
.main_goods_left .main_goods_left-people text {
  position: absolute;
  line-height: 40rpx;
  white-space: nowrap;
  padding: 0 20rpx 0 10rpx;
  border-radius: 0 20rpx 20rpx 0;
  background: #ff33cc;
}

.main_goods_right {
  position: relative;
  width: 470rpx;
  height: 100%;
}

.main_goods_title {
  display: block;
  width: 100%;
  line-height: 46rpx;
}
.sell-point{
  margin-bottom: 26rpx;
  height: 20rpx;
  line-height: 20rpx;
  
}
.main_goods_desc image {
  width: 40rpx;
  height: 40rpx;
}
.pintuan-more-icon {
  margin-right: 20rpx;
  margin-top:12rpx;
}

.main_goods_desc text {
  display: inline-block;
}

.desc_introduction {
  margin-top: 10rpx;
  line-height: 1.4;
  font-size: 24rpx;
  color: #ff495e;
  width: 400rpx;
}

.desc_situation {
  font-size: 24rpx;
  line-height: 1.3;
  color: rgb(240, 60, 60);
  margin-top: 10rpx;
}

.people {
  margin: 0 13rpx;
}

.cl-9 {
  color: #999;
}

.desc_footer {
  margin-top: 15rpx;
}

.price_x {
  margin-right: 25rpx;
}


.settlement {
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  padding: 0 25rpx;
  border-radius: 25rpx;
  border: none;
}

.header {
  display: flex;
  width: 100%;
  height: 124rpx;
  color: #ADADAD;
  font-size: 32rpx;
  background: #131313;
  border-top: 6rpx transparent solid;
  border-image: linear-gradient(to right,#00BFFF, #9933FF, #ff33cc) 1 10;
  z-index: 100;
  overflow: hidden;
  white-space: nowrap;
}

.header scroll-view {
  height: 100%;
}

.cs {
  flex: 1;
  display: inline-block;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  min-width: 140rpx;
  box-sizing: border-box;
}
.cs-box{
  margin: 0 50rpx;
  width: calc(100% - 100rpx);
  display: flex;
  flex-wrap: nowrap;
  overflow: auto;
}

.cs text {
  display: block;
  height: 100%;
}

.active text {
  color: #fff;
  font-weight: 700;
  position: relative;
}
.active text::after {
  content: " ";
  width:34rpx;
  height:4rpx;
  position: absolute;
  background: #ff33cc;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.myorder{
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  height: 50rpx;
  width: 200rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 30rpx;
  transition: 1s;
  background: rgba(0, 0, 0, 0.4);
}

.myorder>.iconfont{
  margin-left: 10rpx;
}