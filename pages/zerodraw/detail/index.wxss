.draw .draw-info{
  margin-bottom: 20rpx;
  line-height: 25rpx;
  display: flex;
}
.draw .draw-info .span-box{
  display: inline-block;
  width: 23rpx;
  height: 24rpx;
  margin-right: 26rpx;
}
.draw .draw-info .word{
  flex: 1;
  line-height: 26rpx;
}

.b-f03{
  background: #FF003C;
}
.btn{
  margin: 100rpx 0;
  width: 100%;
  height: 109rpx;
  text-align: center;
  line-height: 109rpx;
}
.changeAddress{
  margin-top: 30rpx;
}
.none{
  background: #666666;
}

.address{
  height: 120rpx;
  width: 500rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
}
.address .two-row{
  line-height: 46rpx;
}
.address-remarks{
  padding: 10rpx 0 0 6rpx;
}
.address-null{
  flex: 1;
  text-align: center;
}