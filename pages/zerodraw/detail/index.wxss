/* diy组件 */
@import "../../../utils/common.wxss";
@import "../../shop-seckill/goods/index.wxss";

page{
  height: 100%;
  background: #151515;
  line-height: 1;
}
.container{
  max-height: calc(100% + 125rpx);
  box-sizing: border-box;
  padding-bottom: 125rpx;
}
.seckill-state-progress{
  height: 30rpx;
  width: 220rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.5);
  
}
.seckill-state-progress>text{
  line-height: 30rpx;
}
.goods-title>text{
  padding: 0 9rpx;
  background: #ff00ff;
  border-radius: 22rpx;
}
.lucky{
  padding: 24rpx 88rpx;
}

.linear-box{
  margin: 25rpx 0 38rpx 0;
  height: 103rpx;
  border-radius: 14rpx;
}
.info{
  padding: 25rpx 0 12rpx;
  line-height: 36rpx;
}
.linear-box .time{
  height: 100%;
  width: 100%;
  padding: 18rpx 11rpx;
  box-sizing: border-box;
  line-height: 71rpx;
}
.time .black-bg{
  position: relative;
  display: inline-block;
  height: 71rpx;
  width: 72rpx;
  margin: 0 6rpx;
  border-radius: 11rpx;
  line-height: 71rpx;
  text-align: center;
}
.black-bg:after{
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  margin: auto 0;
  height: 2rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.5);
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 115rpx;
  line-height: 115rpx;
}

.draw-code{
  display: block;
  width: 248rpx;
  height: 28rpx;
  border-radius: 14rpx;
  line-height: 28rpx;
}