/* diy组件 */
@import "../../../utils/common.wxss";

page{
  height: 100%;
  background: #151515;
}
.container{
  height: 100%;
  padding: 0 30rpx;
}
.good-img{
  margin-bottom: 33rpx;
  height: 460rpx;
  width: 100%;
}
.lucky-img{
  border: 5rpx solid #FF0000;
}
.good-img>image{
  height: 100%;
  width: 100%;
}
.price{
  margin-bottom: 8rpx;
  height: 83rpx;
  text-align: left;
}
.price .max-price{
  margin-bottom: 10rpx;
  line-height: 24rpx;
}
.min-price{
  line-height: 48rpx;
}
.price .min-price>text{
  margin-left: 14rpx;
  padding: 6rpx 19rpx;
}
.draw{
  padding: 0 38rpx 0 90rpx;
}
.line-42{
  line-height: 42rpx;
}
.num-item{
  width: 500rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
}
.draw .lucky-draw-time{
  margin-bottom: 40rpx;
}
