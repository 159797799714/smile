/* diy组件 */
@import "../../utils/common.wxss";

page{
  height: 100%;
  background: #151515;
}
.container{
  height: 100%;
}
.content{
  flex: 1;
  overflow: auto;
}
.activity-list{
  display: flex;
  align-items: center;
  height: 130rpx;
  padding: 0 30rpx;
}
.activity-list .past-activity{
  width: 102rpx;
  margin-right: 10rpx;
}
.activity-list .activity-menu{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}
.activity-menu .activity-menu-bar{
  flex: 1;
  height: 100%;
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.activity-menu .activity-menu-bar .time{
  line-height: 48rpx;
}
.good-item{
  display: flex;
  height: 330rpx;
  width: calc(100% - 60rpx);
  margin: 30rpx 30rpx 0;
}
.good-item .good-img{
  height: 330rpx;
  width: 326rpx;
}
.good-img > image{
  height: 100%;
  width: 100%;
}
.good-info{
  flex: 1;
}
.good-info .good-name{
  max-height: 89rpx;
  overflow: hidden;
  width: 280rpx;
}
.good-info .good-price{
  margin: 44rpx 0 20rpx;
  line-height: 25rpx;
}
.draw-btn{
  height: 58rpx;
  width: 174rpx;
  line-height: 58rpx;
  text-align: center;
}

