/* wxParse.wxss */
@import "/wxParse/wxParse.wxss";

page {
  background: #000;
}

.container {
  padding: 30rpx;
}

.wxParse-img {
  width: 706rpx;
}

.article-little-image {
  width: 750rpx;
  /* margin-top: 20rpx; */
}

.goods {
    display: flex;
    height: 290rpx;
    width: 100%;
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
}

.left {
  width: 250rpx;
  margin-right: 30rpx;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 20rpx;
  position: relative;
}

.btn-to-goods {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 4rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}

.goodsImg {
  width: 100%;
  height: 100%;
}

.like-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 100rpx 0;
  flex-direction: column;
  color: #999;
  font-size: 26rpx;
}

/* 评论 */
.comment-wrap {
    padding-top: 40rpx;
    background-color: #F5F5F5;
}
.comment-wrap > view {
    padding-bottom: 98rpx;
}
.comment-wrap-content {
    padding: 40rpx 40rpx 0;
}
.comment-wrap-content-people {
    padding-bottom: 50rpx;
}
.uesr-photo image {
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    margin-right: 35rpx;
}
.like-number image {
    width: 26rpx;
}
.see-all-comment {
    padding-left: 150rpx;
    padding-bottom: 60rpx;
}

/* 没有评论 */
.no-comment {
    text-align: center;
}
.no-comment> image {
    width: 112rpx;
    margin: 35rpx 0 24rpx;
}
.no-comment> view {
    margin-bottom: 70rpx;
}

/* 查看所有评论 */
.all-comment {
    height: 97vh;
    padding: 50rpx 40rpx 90rpx;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 11111;
    border-radius: 12rpx 12rpx 0 0;
    transition: all .4s;
}

.all-comment.close-style {
    height: 0;
    padding: 0;
    transition: all .4s;
}
.post-comment.close-style {
    padding: 0;
    height: 0;
    transition: all .01s;
}
.all-comment-text>image {
    width: 27rpx;
}
.all-comment .all-comment-content {
    margin-top: 50rpx;
}
.all-comment .all-comment-content:last-child {
    margin-bottom: 97rpx;
}
/* 作者回复 */
.authors-reply {
    width:555rpx;
    background: #333;
    border-radius:4rpx;
    padding: 36rpx 20rpx;
    margin: -20rpx 0 50rpx 114rpx;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
}
.authors-reply> .authors-reply-line {
    width:4rpx;
    height:27rpx;
    background:rgba(240,90,37,1);
    border-radius:2rpx;
}
.authors-reply> .authors-reply-content {
    margin-left: 14rpx;
}
.authors-reply> .authors-reply-content>text {
    display: block;
    line-height: 28rpx;
}
.authors-reply>.authors-reply-like image {
    width: 26rpx;
    display: block;
}
/* 发布评论 */
.post-comment {
    position: fixed;
    bottom: 0;
    right: 0;
    width: 100%;
    z-index: 12;
    overflow-y: scroll;
    padding: 26rpx 39rpx;
    box-sizing: border-box;
    overflow: hidden;
    background-color: #131313;
    display: flex;
    justify-content: space-between;
    transition: all .01s;
}
.post-comment> view {
    position: relative;
    z-index: 13;
}
.post-comment textarea {
    width: 500rpx;
    padding: 7rpx 30rpx;
    min-height: 40rpx;
    background: #666;
    color: #ccc;
    border-radius: 25rpx;
}

/* 遮罩层 */
.mask {
    height: 100vh;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 7;
    background-color: rgba(0, 0, 0, 0.3);
}

/* 文章状态 */
.article-status {
    height: 98rpx;
    position: fixed;
    bottom: 0;
    width: calc(100% - 60rpx);
    padding: 0 30rpx;
}
.article-status input{
  width: 315rpx;
  min-height: 50rpx;
  height: 50rpx;
  margin: auto 0;
  border-radius: 25rpx;
  background: #666;
  font-size: 22rpx;
  color: #ccc;
  text-align: center;
}
.article-status .foot-right{
  width: calc(100% - 345rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.foot-right image{
  width: 45rpx;
}
.foot-right .share{
  position: relative;
}
.share button{
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0;
  z-index: 5;
}
.my-class111 .diy-banner {
    margin: 0;
}