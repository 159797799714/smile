
/* 选项卡 */

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 80rpx;
}

.swiper-tab .swiper-tab-item {
  width: 33.333333%;
  height: 100%;
  font-size: 28rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.swiper-tab .on {
  color: #fff;
  border-bottom: 2px solid #ff00ff;
}

/* 设置scroll-view容器高度 */

.widget-list, .yoshop-notcont {
  height: 100.1%;
}

/* 提现明细列表 */

.widget-list {
  padding: 10rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
}

.widget__detail {
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.widget__detail .detail__money {
  font-size: 30rpx;
  margin-bottom: 12rpx;
}

.widget__detail .detail__reason {
  margin-top: 15rpx;
  color: #999;
}
