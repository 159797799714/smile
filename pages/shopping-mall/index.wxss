/* diy组件 */
@import "../../components/diy/index.wxss";

/* 搜索框 */
.index-search-box-bg {
  height: 326rpx;
  background-color: #131313;
  border-radius: 0px 0px 0px 171rpx;
}

.index-search-box {
  height: 72rpx;
  margin: -326rpx 30rpx 46rpx;
}

.index-cont-search {
  height: 72rpx;
  background: rgba(248, 248, 248, .1);
  color: #ADADAD;
  margin-top: 26rpx;
}

.index-cont-search>image {
  width: 28rpx;
}

.index-cont-search text {
  margin-left: 22rpx;
}

.banner{
  height: 400rpx;
  width: 100%;
}
/* 阴影 */
.shadow {
  width: 702rpx;
  margin: -46rpx auto;
}

.shadow image {
  width: 100%;
}

/* 全部分类 */
.shop-classify {
  margin: 32rpx 15rpx 0 0;
  flex-wrap: wrap;
}

.shop-classify-item {
  width: 20%;
  height: 140rpx;
  margin-bottom: 48rpx;
}

.shop-classify-item image {
  width: 94rpx;
  margin-bottom: 10rpx;
}

.more-img {
  height: 59rpx !important;
  width: 95rpx !important;
}

.shop-classify-item text {
  color: #A3A3A3;
}

.discount {
  flex-wrap: wrap;
  width: 690rpx;
  height: 486rpx;
  margin: 0 auto 44rpx;
  padding: 4rpx;
  overflow: hidden;
}

/* 拼团 */
.pintuan {
  width: calc(50% - 5rpx);
  height: 240rpx;
  padding: 15rpx 0 0 26rpx;
  margin-bottom: 8rpx;
  box-sizing: border-box;
}

.pintuan-text {
  font-family: PangMenZhengDao;
}

.pintuan-text>image{
  width: 123rpx;
  height: 31rpx;
  margin-right: 14rpx;
}
.pintuan-text .time {
  height: 30rpx;
  border-radius: 14rpx;
  padding: 0 10rpx;
  margin-left: 20rpx;
  line-height: 30rpx;
  letter-spacing: 1px;
}
.pintuan-info{
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 27rpx;
  margin-top: 11rpx;
  letter-spacing: 2rpx;
}
.pintuan> .price{
  line-height: 27rpx;
  margin-top: 11rpx;
}
.price .min-price{
  min-width: 42rpx;
}
.pintuan-icon{
  flex: 1;
  padding-right: 30rpx;
  margin: 5rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}
.pintuan-icon>image {
  height: 100%;
  max-width: 100%;
  margin-right: 10rpx;
}
.pintuan-icon .nothing{
  height: 100%;
  width: 100%;
  text-align: center;
}
.nothing image{
  height: 100rpx;
  width: 130rpx;
}

.pintuan-icon-one{
  text-align: right;
  margin-top: 0;
}
.pintuan-icon-one>image{
  height: 140rpx;
}

/* 秒杀购和限时购 */

.activity-box {
  margin: 0 30rpx 50rpx;
}

.activity-box-item {
  max-height: 240rpx;
  width: 100%;
  min-width: 340rpx;
  background-color: #F4F4F8;
  margin-bottom: 10rpx;
  padding: 25rpx 35rpx 20rpx 25rpx;
  box-sizing: border-box;
}

.activity-box-item:first-of-type {
  margin-right: 10rpx;
}

.flex-row {
  max-height: 240rpx;
  width: 100%;
  background-color: #F4F4F8;
  margin-bottom: 10rpx;
  padding: 25rpx 35rpx 20rpx 25rpx;
  box-sizing: border-box;
  flex-direction: row;
}

.activity-box-item-type {
  line-height: 34rpx;
}


.activity-box-item-price image {
  width: 39rpx;
  margin-right: 13rpx;
}

.activity-box-item-type>image {
  width: 124rpx;
}

.activity-box-item-price-text {
  color: #F4433D;
  line-height: 42rpx;
}

/* 倒计时 */
.count-down {
  width: 140rpx;
  height: 30rpx;
  background: rgba(19, 19, 19, 1);
  color: #fff;
  border-radius: 18rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  margin: 14rpx 0 0 0;
}

.activity-box-item-image image {
  height: 100rpx;
  width: 100rpx;
  margin-right: 14rpx;
}

/* 为你推荐 */
.recommend-box-line {
  height: 20rpx;
}

.recommend-box-image {
  display: block;
  margin: 0 auto;
  width: calc(100% - 60rpx);
  /* padding-top: 40rpx; */
  padding: 0 30rpx;
}
.recommend-box-image> image {
  width: 100%;
}

.recommend-box-content {
  padding: 40rpx 30rpx 30rpx;
  flex-wrap: wrap;
}

.recommend-box-content-item {
  width: 330rpx;
  margin-bottom: 20rpx;
}

.recommend-box-content-item>image {
  width: 100%;
  height: 330rpx;
  margin-bottom: 20rpx;
}

.recommend-box-content-item-title {
  height: 70rpx;
  padding: 0 36rpx 0 16rpx;
}

.recommend-box-content-item-price {
  margin-right: 16rpx;
  text-align: left;
  padding-left: 8rpx;
}

.max-price {
  line-height: 24rpx;
}

.max-price>text {
  padding-left: 8rpx;
  line-height: 24rpx;
}

.recommend-box-content-item-price>image {
  width: 26rpx;
  margin-top: 12rpx;
}
.linear-border-2{
  border: 4rpx transparent solid;
  border-image: linear-gradient(to right,#00BFFF, #9933FF, #ff33cc) 1 10; 
}