/* 红包 */

.big-box, swiper, swiper-item{
  height: 100%;
  width: 100%;
}
.redBoxBg{
  width: 100%;
  overflow: hidden;
}
.redBoxBg>image{
  width: 100%;
}
.content{
  padding: 60rpx 30rpx 60rpx 10rpx;
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(12,221,254,1),rgba(66,105,248,1),rgba(51,0,153,1),rgba(33,3,133,1));
}
.red-item{
  float: left;
  height: 150rpx;
  width: 335rpx;
  padding: 20rpx 10rpx 0 20rpx;
  margin: 0 0 20rpx 20rpx;
  box-sizing: border-box;
  line-height: 1em;
  border-radius: 20rpx;
  background: linear-gradient(to right, #00BFFF, #9933FF, #ff33cc);
  box-shadow: 0px 3px 7px 0px rgba(0, 0, 0, 0.71);
}
.word::after{
  content: '￥';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;text-align: center;
  font-size: 32rpx;
  color: #fff;
  
}
.pull-btn{
  display: inline-block;
  height: 42rpx;
  width: 42rpx;
  line-height: 22rpx;
  padding: 15rpx;
  border-radius: 100%;
}

