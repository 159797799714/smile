                    </view>
                    <text class="money" wx:if="{{ item.coupon_type.value == 20 }}">{{ item.discount }}折</text>
                    <text class="pay-line">满{{ item.min_price }}元可用</text>
                  </view>
                  <view class="split-line"></view>
                  <view class="content dis-flex flex-dir-column flex-x-between">
